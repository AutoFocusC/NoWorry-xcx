<view class="page-visa">
  <input class="input" bindfocus="focus" bindblur="blur" />
  <van-tabs class="visa-group-list" wx:if="{{show}}" color="#797532" title-inactive-color="#79753270" title-active-color="#797532" active="{{activeVisa}}">
    <van-tab title="热门">
      <view class="visa-list">
        <view class="visa-item" wx:for="{{visaList}}" wx:key="index" bind:tap="toDetail" data-commodityid="{{item.commodityId}}">
          <view class="item-image">
            <van-image class="image" style="display:{{!input?'block':'none'}}" width="100%" height="60vw" src="{{item.picLink}}" />
          </view>
          <view class="info">
            <view class="title">{{item.commodityName}}</view>
            <view class="price">£{{item.currentPrice}}</view>
          </view>
        </view>
      </view>
    </van-tab>
    <van-tab title="申根">aaa</van-tab>
    <van-tab title="北欧">aaa</van-tab>
    <van-tab title="美国">aaa</van-tab>
    <van-tab title="亚洲">aaa</van-tab>
  </van-tabs>
</view>