.add-btn {
    height: 12.5vw;
    width: 78.9vw;
    border-radius: 7px;
    margin: 0 auto;
    line-height: 12.5vw;
    box-shadow: 0px 4px 5px rgba(242, 132, 59, 0.25);
    color: #FEFFFB;
    font-size: 17px;
    font-weight: 600;
}

.add-btn:nth-child(1) {
    background-color: #F2843B;
}
.add-btn:nth-child(2) {
    background-color: #0386FE;
}

.toast {
    position: fixed;
    top: 40vh;
    height: 20vh;
    width: 80vw;
    left: 10vw;
    background-color: #353535BD;
    border-radius: 5px;
    z-index: 99;

    display: flex;
    flex-direction: column;
    justify-content: center;
    color: #FFFFFF;
    font-size: 17px;
    font-weight: 600;
    line-height: 24px;
}