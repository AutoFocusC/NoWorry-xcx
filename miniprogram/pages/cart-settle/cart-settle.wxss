.page {
    height: 100vh;
    background-color: #F8F6EE;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    margin-bottom: 5vh;
}

.commodity-list {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    padding-bottom: 4vh;
}


.commodity-list .empty {
    margin-top: 12vh;
}

.commodity-list .empty .empty-text {
    margin-top: 3vh;
    font-size: 15px;
    font-weight: 600;
    line-height: 20px;
    letter-spacing: 0px;
    text-align: center;
}

.commodity-list .empty .empty-describe {
    font-size: 15px;
    font-weight: 300;
    line-height: 20px;
    text-align: center;
}

.commodity-list .empty .empty-describe span {
    color: #F2843B;
    border-bottom: 1px solid #F2843B;

}

.commodity-list .commodity-item {
    background-color: #fff;
    width: 80vw;
    height: 21.4vw;
    margin: 0 auto;
    margin-bottom: 2.5vw;
    padding: 6px 1px;
    border-radius: 6px;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.commodity-list .commodity-item .item-image {
    width: 70px;
    height: 70px;
    border-radius: 4px;
    overflow: hidden;
}

.commodity-list .commodity-item .item-info {
    width: 45vw;
}

.commodity-list .commodity-item .item-info view:nth-child(1) {
    text-align: left;
    font-size: 14px;
    font-weight: 600;
    line-height: 25px;
}

.commodity-list .commodity-item .item-info view:nth-child(2) {
    text-align: left;
    font-weight: 300;
    font-size: 12px;
    line-height: 25px;
}


.commodity-list .commodity-item .item-pm {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
}

.commodity-list .commodity-item .item-pm .item-number {
    display: flex;
    flex-direction: row;
    width: 110rpx;
    justify-content: space-between;
    align-items: center;
}


.commodity-list .commodity-item .item-pm .item-price {
    font-size: 17px;
    font-weight: 500;
    line-height: 24px;
    text-align: right;
}