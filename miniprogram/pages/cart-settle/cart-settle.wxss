.page {
    height: 100vh;
    background-color: #F8F6EE;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    margin-bottom: 5vh;
}

.title {
    display: flex;
    flex-direction: row;
    width: 100%;
    margin: 3vh 1vw 1.5vh 0;
}

.title-img {
    margin: 0 0 0 -2vw;
}

.title-word {
    font-size: 17px;
    font-weight: 600;
    line-height: 24px;
    text-align: left;

}

.info-list {
    width: 80vw;
    background-color: #FFFFFF;
    display: flex;
    flex-direction: column;
    align-items: center;

    padding: 20rpx 44rpx;

    border-radius: 12rpx;
}

.info-list .info-item {
    width: 100%;
    height: 80rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    border-bottom: 0.1rpx solid #79753299;

    font-size: 12px;
    font-weight: 300;
    line-height: 17px;
    text-align: center;
    color: #161415;
}

.info-list .info-item input {
    text-align: right;
    margin-right: 26rpx;
}

.opea-list {}

.opea-list .opea-item {
    margin: 1.9vh 0;
    padding: 6rpx 44rpx;
    width: 80vw;
    height: 6.4vh;
    border-radius: 5px;
    background-color: #FFFFFF;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #161415;
    box-shadow: #E1DAD2 35%;

    font-size: 14px;
    font-weight: 400;
    line-height: 20px;
    letter-spacing: 0em;
    text-align: center;

}

.commodity-list {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    padding-bottom: 4vh;
}


.commodity-list .empty {
    margin-top: 12vh;
}

.commodity-list .empty .empty-text {
    margin-top: 3vh;
    font-size: 15px;
    font-weight: 600;
    line-height: 20px;
    letter-spacing: 0px;
    text-align: center;
}

.commodity-list .empty .empty-describe {
    font-size: 15px;
    font-weight: 300;
    line-height: 20px;
    text-align: center;
}

.commodity-list .empty .empty-describe span {
    color: #F2843B;
    border-bottom: 1px solid #F2843B;

}

.commodity-list .commodity-item {
    background-color: #fff;
    width: 80vw;
    height: 21.4vw;
    margin: 0 auto;
    margin-bottom: 2.5vw;
    padding: 6px 1px;
    border-radius: 6px;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.commodity-list .commodity-item .item-image {
    width: 70px;
    height: 70px;
    border-radius: 4px;
    overflow: hidden;
}

.commodity-list .commodity-item .item-info {
    width: 45vw;
}

.commodity-list .commodity-item .item-info view:nth-child(1) {
    text-align: left;
    font-size: 14px;
    font-weight: 600;
    line-height: 25px;
}

.commodity-list .commodity-item .item-info view:nth-child(2) {
    text-align: left;
    font-weight: 300;
    font-size: 12px;
    line-height: 25px;
}


.commodity-list .commodity-item .item-pm {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
}

.commodity-list .commodity-item .item-pm .item-number {
    display: flex;
    flex-direction: row;
    width: 110rpx;
    justify-content: space-between;
    align-items: center;
}


.commodity-list .commodity-item .item-pm .item-price {
    font-size: 17px;
    font-weight: 500;
    line-height: 24px;
    text-align: right;
}