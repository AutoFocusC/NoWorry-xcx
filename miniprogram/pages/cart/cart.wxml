<view class="page-cart">
  <view class="cart-title">签证</view>
  <view class="cart-list">
    <view class="cart-item" wx:for="{{carts}}" wx:key="index">
      <view wx:if="{{item.select}}" bind:tap="checkBtn" data-index="{{index}}">
        <van-icon size="20px" name="/static/cart/select-cart.png" />
      </view>
      <view wx:else bind:tap="checkBtn" data-index="{{index}}">
        <van-icon size="20px" name="/static/cart/select-cart-none.png" />
      </view>
      <view class="item-image">
        <van-image width="90px" height="90px" src="https://img.yzcdn.cn/vant/cat.jpeg" />
      </view>
      <view>
        <view class="item-info">
          <view>{{item.commodityName}}</view>
          <view>{{item.commodityBrief}}</view>
        </view>
        <view class="item-pm">
          <view class="item-number">
            <van-icon size="16px" bind:tap="add" data-index="{{index}}" data-add="{{-1}}" name="/static/cart/minus.png" />
            <view>{{item.quantity}}</view>
            <van-icon size="16px" bind:tap="add" data-index="{{index}}" data-add="{{1}}" name="/static/cart/add.png" />
          </view>
          <view class="item-price">£{{item.price}}</view>
        </view>
      </view>
    </view>
  </view>
  <view class="subtotal">
    <view class="select-all">
      <van-icon wx:if="{{allselect}}" size="20px" name="/static/cart/select-cart.png" />
      <van-icon wx:else size="20px" name="/static/cart/select-cart-none.png" />
      <view>全选</view>
    </view>
    <view class="subtotal-number">
      <view class="price-all">
        <view class="price-origin">
          <span>合计：</span>
          <span>£{{totalPrice}}</span>
        </view>
        <view class="price-conver">GBP {{totalPrice}}≈CNY {{totalPrice2}}</view>
      </view>
      <view class="settle">
        <button class="button" bind:tap="settle">结算</button>
      </view>
    </view>
  </view>
</view>