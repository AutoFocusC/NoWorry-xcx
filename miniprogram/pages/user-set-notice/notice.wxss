.page-privacy {
    min-height: 100vh;
    background-color: #F8F6EE;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
}
 .page-privacy .body {
    width: 82vw;
 }

 .page-privacy .body .head {
    align-items: center;
    text-align: center;
 }

 .page-privacy .body .head .title {
    font-weight: 600;
    font-size: 17px;
    line-height: 24px;
    text-align: center;
    color: #161415;
    margin-top: 8vw;
    margin-bottom: 2.4vw;
 }

 .page-privacy .body .head .info {
    font-weight: 200;
    font-size: 10px;
    line-height: 14px;
    letter-spacing: 1px;
    color: #161415;
    text-align: left;
    margin-top: 10px;
 }

 .page-privacy .body .item {
   display: flex;
   flex-direction: row;
   margin-bottom: 10px;
   margin-top: 30px;
 }

 .page-privacy .body .item .img {
   margin-left: -4px;
 }

 .page-privacy .body .item .title {
   font-weight: 400;
   font-size: 14px;
   line-height: 20px;
   color: #161415;
 }

 .page-privacy .body .caption {
   font-weight: 300;
   text-align: left;
   font-size: 12px;
   line-height: 17px;
   letter-spacing: 1px;
   color: #161415;
 }

 .page-privacy .body .list {
   font-weight: 300;
   text-align: left;
   font-size: 10px;
   line-height: 17px;
   color: #161415;
 }