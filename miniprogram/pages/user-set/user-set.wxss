.page {
    min-height: 100vh;
    background-color: #F8F6EE;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    margin-bottom: 5vh;
}


.list-title {
    font-size: 17px;
    font-weight: 600;
    line-height: 24px;
    text-align: left;
    margin: 3vh 1vw 1.5vh 1vw;
}

.info-list {
    width: 80vw;
    background-color: #FFFFFF;
    display: flex;
    flex-direction: column;
    align-items: center;

    padding: 20rpx 44rpx;

    border-radius: 12rpx;
}

.info-list .info-item {
    width: 100%;
    height: 80rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;

    padding-right: 25rpx;

    border-bottom: 0.1rpx solid #79753299;

    font-size: 12px;
    font-weight: 300;
    line-height: 17px;
    text-align: center;
    color: #161415;
}

.info-list .info-item:nth-last-child(1) {
    border-bottom: none;
}


.info-list .info-item input {
    text-align: right;
}

.save-btn {
    height: 48px;
    line-height: 48px;
    width: 70vw;
    border-radius: 7px;
    margin: 5vh auto;
    background: #F2843B;

    font-size: 17px;
    font-weight: 600;
    text-align: center;
    color: #FFFFEE;

}